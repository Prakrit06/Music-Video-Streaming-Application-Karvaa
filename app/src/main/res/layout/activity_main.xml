<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_centerVertical="true"
    tools:context=".MainActivity"
    android:background="@drawable/redb">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:text="Welcome! Back"
        android:textColor="#FFFFFFFF"
        android:textFontWeight="900"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textVideo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:fontFamily="cursive"
        android:text="Today's Special "
        android:textColor="#FFFFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="20dp" />

    <TextView
        android:id="@+id/text_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonPlaylist"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Playlist"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="95dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageButtonVideo"
        android:text="YouTube"

        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="93dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageButtonRadio"
        android:text="Radio"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="91dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginLeft="220dp" />

    <TextView
        android:id="@+id/textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageButtonTv"
        android:text="NETFLIX"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="91dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginLeft="220dp" />

    <ImageButton
        android:id="@+id/imageButtonPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/roundstyle"
        app:srcCompat="@drawable/headphone"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="143dp"
        />

    <ImageButton
        android:id="@+id/imageButtonRadio"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="182dp"
        android:layout_marginTop="55dp"
        android:onClick="navigate3"
        app:srcCompat="@drawable/radio"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="143dp"
        android:layout_marginLeft="220dp" />

    <ImageButton
        android:id="@+id/imageButtonVideo"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageButtonPlaylist"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:onClick="navigate2"
        app:srcCompat="@drawable/youtube"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="142dp"
        android:layout_marginLeft="20dp"
        />

    <ImageButton
        android:id="@+id/imageButtonTv"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageButtonRadio"
        android:layout_marginStart="182dp"
        android:layout_marginTop="40dp"
        android:onClick="navigate4"
        app:srcCompat="@drawable/netflix"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_marginLeft="220dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="160dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        app:srcCompat="@drawable/yt_music"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="385dp"
        android:layout_marginLeft="90dp"
        />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageView"
        android:onClick="playMusic"
        android:background="@color/black"
        app:srcCompat="@drawable/ic_round_play_circle_filled"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="608dp"
        android:layout_marginLeft="140dp"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageView"
        android:onClick="pauseMusic"
        app:srcCompat="@drawable/ic_round_pause"
        tools:layout_editor_absoluteX="164dp"
        android:background="@color/black"
        tools:layout_editor_absoluteY="617dp"
        android:layout_marginLeft="190dp"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>